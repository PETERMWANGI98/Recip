<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_margin="16dp"
    android:elevation="0dp"
    android:layout_marginBottom="16dp"
    app:cardElevation="0dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    android:theme="@style/Theme.MaterialComponents"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iVTopProperty"
            android:layout_width="156dp"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wallpaper"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="156dp"
            android:layout_height="96dp"
            android:background="#66000000"
            android:fitsSystemWindows="true"
            app:layout_constraintEnd_toEndOf="@+id/iVTopProperty"
            app:layout_constraintStart_toStartOf="@+id/iVTopProperty"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tVTopPropertyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DISHTYPE"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/iVTopProperty" />

        <TextView
            android:id="@+id/tVTopPropertyRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/baked_cheese_manicotti"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/iVTopProperty"
            app:layout_constraintStart_toStartOf="@+id/iVTopProperty"
            app:layout_constraintTop_toBottomOf="@+id/tVTopPropertyTitle" />

        <TextView
            android:id="@+id/tVTopPropertySize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="45 mins."
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/iVLocation"
            app:layout_constraintTop_toBottomOf="@+id/tVTopPropertyRegion" />

        <ImageView
            android:id="@+id/iVLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:tint="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/tVTopPropertyRegion"
            app:layout_constraintTop_toBottomOf="@+id/tVTopPropertyRegion"
            app:srcCompat="@drawable/ic_access_time_black_24dp" />

        <ImageView
            android:id="@+id/iVAddToFavourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:tint="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>